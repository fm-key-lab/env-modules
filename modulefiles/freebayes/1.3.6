module-whatis "Provides: freebayes <-- should edit to list executables"

depends-on apptainer/1.3.2

set-function freebayes-parallel {
    apptainer --quiet exec --home $PWD --bind /ptmp,/u,/nexus $GROUP_HOME/containers/freebayes.sif freebayes-parallel "$@"
}

set-function freebayes {
    apptainer --quiet exec --home $PWD --bind /ptmp,/u,/nexus $GROUP_HOME/containers/freebayes.sif freebayes "$@"
}
