#%Module
##
## micromamba 1.5

proc ModulesHelp { } {
   puts stderr "
Adds micromamba to your path
Version 1.0
"
}
 
module-whatis "Adds micromamba to your path\n"
module-whatis "Provides: micromamba"

set basedir [getenv "MODULE_BASEDIR"]
if { $basedir eq "" } {
    puts stderr "Error: MODULE_BASEDIR environment variable is not set."
    exit 1
}
prepend-path PATH "${basedir}/micromamba"

# Set MAMBA_ROOT_PREFIX to default value if not already set
if {![info exists env(MAMBA_ROOT_PREFIX)]} {
    setenv MAMBA_ROOT_PREFIX "$env(HOME)/micromamba"
}

# Evaluate shell hook
if {[info exists env(MODULESHOME)]} {
    catch { exec bash -c "eval \"\$(${basedir}/micromamba/bin/micromamba shell hook -s bash)\"" }
    # Enable shell completion
    catch { exec bash -c "eval \"\$(${basedir}/micromamba/bin/micromamba shell completion)\"" }
}

# Cleanup when module is unloaded
if {[module-info mode remove]} {
    unsetenv MAMBA_ROOT_PREFIX
    if {[info exists env(MODULESHOME)]} {
        catch { exec bash -c "eval \"\$(micromamba shell dehook -s bash)\"" }
    }
}